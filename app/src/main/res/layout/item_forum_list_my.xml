<?xml version="1.0" encoding="utf-8"?>
<com.ninetaildemonfox.zdl.tongcheng_cai.utlis.recyclerview.RecyclerItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginBottom="1dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/slide"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/layout_left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/other"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_red"
                android:gravity="center"
                android:text="其 他" />

            <TextView
                android:id="@+id/delete"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_red"
                android:gravity="center"
                android:text="删 除" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_left"
            android:layout_width="414dp"
            android:layout_height="match_parent"
            android:background="@drawable/content_white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/image_head"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/icon_code_head" />

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/image_head"
                    android:text="发布人昵称"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/image_head"
                    android:text="2019/08/05"
                    android:textSize="10dp" />


                <TextView
                    android:id="@+id/text_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@mipmap/icon_home_comment"
                    android:drawablePadding="5dp"
                    android:text="207" />

                <TextView
                    android:id="@+id/text_snap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/text_comment"
                    android:drawableLeft="@mipmap/icon_home_snap_true"
                    android:drawablePadding="5dp"
                    android:text="207" />

            </RelativeLayout>

            <TextView
                android:layout_width="414dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="最近有4脸红的成绩，状态不错！周二继续有亚冠西亚赛区的比赛，不妨继续精选分析为你送上！文末有比分赠送！"
                android:textColor="@color/textColor"
                android:textSize="13dp" />

        </LinearLayout>

    </RelativeLayout>

</com.ninetaildemonfox.zdl.tongcheng_cai.utlis.recyclerview.RecyclerItemView>